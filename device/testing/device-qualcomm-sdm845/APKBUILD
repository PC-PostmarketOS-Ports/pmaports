
# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Caleb Connolly <caleb.connolly@linaro.org>

pkgname=device-qualcomm-sdm845
pkgdesc="Generic device package for Qualcomm SDM845 devices"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	fwupd>=1.8.6
	linux-postmarketos-qcom-sdm845
	mkbootimg
	postmarketos-base
	soc-qcom-sdm845
	soc-qcom-sdm845-ucm
	soc-qcom-sdm845-qbootctl
	systemd-boot
"
makedepends="devicepkg-dev"
source="
	10-unl0kr.conf
	deviceinfo
	q6voiced.conf
	modules-initfs
"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
provides="
	device-oneplus-fajita=$pkgver-r$pkgrel
	device-oneplus-enchilada=$pkgver-r$pkgrel
	device-shift-axolotl=$pkgver-r$pkgrel
	device-xiaomi-beryllium=$pkgver-r$pkgrel
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	install -Dm644 "$srcdir"/10-unl0kr.conf \
		"$pkgdir"/etc/unl0kr.conf.d/10-unl0kr.conf
}

nonfree_firmware() {
	pkgdesc="Modem, GPU and WiFi Firmware, also needed for osk-sdl"
	depends="
		firmware-oneplus-sdm845
		firmware-shift-sdm845
		firmware-xiaomi-beryllium
		soc-qcom-sdm845-nonfree-firmware
		soc-qcom-sdm845-modem
		linux-firmware-qcom
		linux-firmware-ath10k
	"
	provides="
		device-oneplus-fajita-nonfree-firmware=$pkgver-r$pkgrel
		device-oneplus-enchilada-nonfree-firmware=$pkgver-r$pkgrel
		device-shift-axolotl-nonfree-firmware=$pkgver-r$pkgrel
		device-xiaomi-beryllium-nonfree-firmware=$pkgver-r$pkgrel
	"
	mkdir "$subpkgdir"

	install -Dm644 q6voiced.conf "$subpkgdir"/etc/conf.d/q6voiced
}

